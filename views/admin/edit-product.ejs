<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <form
        class="product-form"
        action="/admin/<% if(editing){ %>edit-product/<%= product.id %> <%}else {%>add-product<%}%>"
        method="POST"
      >
        <!-- post to different url -->
        <div class="form-control">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            value="<%= editing ?
          product.title: '' %> "
          />
        </div>
        <div class="form-control">
          <label for="imageUrl">imageUrl</label>
          <input
            type="text"
            name="imageUrl"
            id="imageUrl"
            value="<%=  editing ? product.imageUrl:''  %>"
          />
        </div>
        <div class="form-control">
          <label for="price">price</label>
          <input
            type="number"
            name="price"
            id="price"
            step="0.01"
            value="<%=  editing ? product.price:'' %>"
          />
        </div>

        <div class="form-control">
          <label for="description">description</label>
          <textarea type="text" name="description" id="description" rows="5">
<%= editing ? product.description :'' %></textarea
          >
        </div>
        <button class="btn" type="submit">
          <%= editing ? "Update Product": "Add Product" %>
          <!-- <% if (editing) { %> Update Product<% } else {%> Add Product <%} %> -->
        </button>
      </form>
    </main>
  </body>
</html>
